    <div class="main-content_wrap">
        <div class="top">
            <a href="/admin/create" class="btn">Create post</a>
        </div>

        {% if parameters %}
            {% for post in parameters.posts %}
                <div class="post">
                    <div class="post_content">
                        <div class="post_text">
                            <h1>{{ post.header }}</h1>
                            <p>{{ post.text }}</p>
                        </div>
                        <div class="post_image">
                            <img src="/public/img/uploaded_files/{{ post.img_name }}" alt="{{ post.img_name }}">
                        </div>
                    </div>
                    <div class="post_addition">
                        <p>post id: <span>{{ post.id }}</span></p>
                        <p>Author: <span>{{ post.login }}</span></p>
                        <p>Created at: <span>{{ post.created_at }}</span></p>
                        {% if post.edited_at %}
                            <p>Edited at: <span>{{ post.edited_at }}</span></p>
                        {% endif %}
                    </div>
                    <div class="admin_post__controls">
                        <a href="../admin/edit/{{ post.id }}" class="btn">Edit</a>
                        <a href="../admin/delete/{{ post.id }}" class="btn">Delete</a>
                    </div>
                </div>


            {% endfor %}
        {% endif %}

    </div>


    <div class="pagination_wrap">
        <ul class="pagination">
            {% for i in 1..parameters.pages %}
                <li><a href="/admin/index/{{ i }}">{{ i }}</a></li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
