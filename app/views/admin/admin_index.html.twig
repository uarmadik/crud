{% extends "admin_template.html.twig" %}
{% block title %}
    Main page
{% endblock %}


{% block content %}
    {% if parameters.message.alert %}
        <div class="alert">
            <p>{{ parameters.message.alert }}</p>
        </div>
    {% elseif parameters.message.alert_error %}
        <div class="alert alert-error">
            <p>{{ parameters.message.alert_error }}</p>
        </div>
    {% endif %}

